{
  "manifest_version": 3,
  "name": "Keep Only Target Tab",
  "version": "1.0",
  "description": "Automatically keeps only the specified tab open and closes distractions.",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/target.png",
      "48": "assets/target.png",
      "128": "assets/target.png"
    }
  },
  "background": {
    "service_worker": "src/tab-enforcer.js"
  },
  "icons": {
    "16": "assets/target.png",
    "48": "assets/target.png",
    "128": "assets/target.png"
  }
}
